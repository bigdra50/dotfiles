{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "cleanupPeriodDays": 1000,
  "env": {
    "CLAUDE_CODE_AUTO_CONNECT_IDE": "0",
    "CLAUDE_CODE_IDE_SKIP_AUTO_INSTALL": "1",
    "CLAUDE_CODE_IDE_SKIP_VALID_CHECK": "1",
    "CLAUDE_CODE_ENABLE_TELEMETRY": "0",
    "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "1",
    "DISABLE_ERROR_REPORTING": "1",
    "DISABLE_TELEMETRY": "1",
    "DISABLE_MICROCOMPACT": "1",
    "ENABLE_BACKGROUND_TASKS": "1",
    "FORCE_AUTO_BACKGROUND_TASKS": "1",
    "DISABLE_INTERLEAVED_THINKING": "1"
  },
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [],
    "deny": [
      "Bash (sudo:*)",
      "Bash (rm--rf: :*)",
      "Bash (git push:*) ",
      "Bash (git reset:*)",
      "Bash (git rebase:*)",
      "Read (.env.*)",
      "Read (id_rsa)",
      "Read (id_ed25519)",
      "Read (**/*token*) ",
      "Write(.env*)",
      "Write (**/secrets/**)",
      "Bash (curl:*) ",
      "Bash (wget :*) ",
      "Bash (nc:*) ",
      "Bash (npm uninstall:*)",
      "Bash (npm remove: :*)",
      "Bash(psql: :*) ",
      "Bash (mysql:*)",
      "Bash (mongod:*) "
    ],
    "defaultMode": "acceptEdits"
  },
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/tools/claude-task-complete.sh"
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/unity-refresh-on-stop.sh"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.sh",
    "padding": 0
  },
  "enabledPlugins": {
    "frontend-design@claude-code-plugins": false,
    "code-review@claude-code-plugins": true,
    "feature-dev@claude-code-plugins": false,
    "plugin-dev@claude-code-plugins": false,
    "pr-review-toolkit@claude-code-plugins": false,
    "security-guidance@claude-code-plugins": true,
    "session@upfrontier-lab": true,
    "git-workflow@bigdra50": true,
    "session@bigdra50": true,
    "csharp-lsp@claude-plugins-official": false,
    "code-review@claude-plugins-official": true,
    "unity-editor@upfrontier-lab": true,
    "unity@upfrontier-lab": true
  },
  "alwaysThinkingEnabled": true,
  "feedbackSurveyState": {
    "lastShownTime": 1754086968953
  }
}
