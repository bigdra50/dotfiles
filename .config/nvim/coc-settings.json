{
  "coc.preferences.hoverTarget": "float",
  "coc.preferences.formatOnSaveFiletypes": [
    "lua",
    "html",
    "js"
  ],
  "suggest": {
    "triggerAfterInsertEnter": true,
    "enablePreview": true,
    "timeout": 5000,
    "preferCompleteThanJumpPlaceholder": true,
    "noselect": true,
  },
  "diagnostic": {
    "checkCurrentLine": true,
    "signOffset": 100,
    "warningSign": "--",
    "refreshOnInsertMode": true,
  },
  "stylua.checkUpdate": true,
  "rust-analyzer": {
    "diagnostics.enable": true,
    "inlayHints.enable": true,
    "inlayHints.typeHints": true,
    "inlayHints.chainingHints": true,
    "inlayHints.parameterHints": true,
    "checkOnSave.enable": true,
    "assist.importMergeBehavior": "module",
    "diagnostics.enableExperimental": true,
    "diagnostics.disabled": [
      "macro-error"
    ],
  },
  "diagnostics-languageserver": {
    "linters": {},
    "filetypes": {
      "vim": "vint",
      "email": "languagetool",
      "sh": "shellcheck",
      "zsh": "shellcheck",
      "markdown": [
        "write-good",
        "markdownlint"
      ],
      "yaml": [
        "yamllint"
      ],
      "cmake": [
        "cmake-lint",
        "cmakelint"
      ],
      "systemd": "systemd-analyze"
    },
    "formatters": {
      "shfmt": {
        "command": "shfmt",
        "args": [
          "-i",
          "2",
          "-bn",
          "-ci",
          "-sr"
        ]
      }
    },
    "formatFiletypes": {
      "dart": "dartfmt",
      "elixir": "mix_format",
      "eelixir": "mix_format",
      "python": [
        "black",
        "isort"
      ],
      "lua": "lua-format",
      "sh": "shfmt",
      "blade": "blade-formatter",
      "cmake": "cmake-format"
    }
  },
  "languageserver": {
    "nix": {
      "command": "rnix-lsp",
      "filetypes": [
        "nix"
      ]
    },
    "csharp-ls":{
      "command": "csharp-ls",
      "filetypes": ["cs"],
      "rootPatterns": ["*.csproj", ".vim/", ".git/", ".hg/"]
    }
  }
}
